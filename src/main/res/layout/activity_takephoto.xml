<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/camera_frame" >

     <ImageView
         android:id="@+id/imageView1"
         android:layout_width="fill_parent"
         android:layout_height="180dp"
         android:layout_alignParentBottom="true"
         android:layout_alignParentLeft="true"
         android:contentDescription="@string/image_content_description"
         android:scaleType="fitXY"
         android:src="@drawable/camera_frame_bottom" />

     <SurfaceView
         android:id="@+id/surface"
         android:layout_width="fill_parent"
         android:layout_height="350dp"
         android:layout_above="@+id/imageView1"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:layout_marginBottom="10dp"
         android:layout_marginTop="50dp" />

     <RelativeLayout
         android:layout_width="fill_parent"
         android:layout_height="40dp"
         android:layout_alignParentTop="true"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="5dp" >

         <Button
             android:id="@+id/btnCloseTakePhoto"
             android:layout_width="35dp"
             android:layout_height="35dp"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
             android:layout_marginLeft="10dp"
             android:background="@drawable/btn_camera_cancel" />

         <Button
             android:id="@+id/btnFlashTakePhoto"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_centerInParent="true"
             android:background="@drawable/btn_flash_off" />

         <Button
             android:id="@+id/btnRearTakePhoto"
             android:layout_width="40dp"
             android:layout_height="35dp"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="10dp"
             android:background="@drawable/btn_camera_rear" />

     </RelativeLayout>

     <Button
         android:id="@+id/btnShutterTakePhoto"
         android:layout_width="80dp"
         android:layout_height="60dp"
         android:layout_alignParentBottom="true"
         android:layout_centerHorizontal="true"
         android:layout_marginBottom="75dp"
         android:background="@drawable/btn_shutter" />

     <Button
         android:id="@+id/btnGalleryTakePhoto"
         android:layout_width="70dp"
         android:layout_height="50dp"
         android:layout_alignParentBottom="true"
         android:layout_alignParentLeft="true"
         android:layout_marginBottom="31dp"
         android:layout_marginLeft="17dp"
         android:background="@drawable/btn_gallery" />

</RelativeLayout>
